{sub_dirs,["deps", "examples"]}.
{lib_dirs,["deps", "examples"]}.
{erl_opts, [
  {parse_transform, lager_transform},
  {src_dirs, ["src", "test"]},
  warn_unused_vars,
  warn_export_all,
  warn_shadow_vars,
  warn_unused_import,
  warn_unused_function,
  warn_bif_clash,
  warn_unused_record,
  warn_deprecated_function,
  warn_obsolete_guard,
  strict_validation,
  warn_export_vars,
  warn_exported_vars,
  %warn_missing_spec,
  warn_untyped_record, debug_info
]}.
{ erl_opts, [fail_on_warning, debug_info] }.
{ cover_enabled, true }.
{ clean_files, ["ebin/*.beam"] }.
{ eunit_opts, [ verbose,
                {report, {eunit_surefire, [{dir, "."}]}}
              ] }.
{ deps, [ { sumo_db,
            ".*",
            {git, "https://github.com/inaka/sumo_db.git", {tag, "0.3.0"}}
          },
          { mixer,
            ".*",
            {git, "https://github.com/spiegela/mixer.git", {branch, "master"}}
          }
        ]
}. 
{xref_warnings, true}.
{xref_checks, [undefined_function_calls, undefined_functions, locals_not_used, deprecated_function_calls, deprecated_functions]}.
{require_min_otp_vsn, "17"}.

%% Common test
{ct_log_dir,"log/ct"}.
{ct_extra_params,"-no_auto_compile -dir ebin -pa deps/*/ebin -smp enable -s emysql -s sumo_db -erl_args -config test/test.config"}.
